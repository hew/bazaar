{
  "name": "bazaar",
  "version": "0.0.1",
  "private": true,
  "description": "Build x-platform React apps bizarrely fast.",
  "author": "hew <mattt@hew.tools>",
  "license": "ISC",
  "workspaces": {
    "packages": [
      "frontend/"
    ],
    "nohoist": [
      "**/expo"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@testing-library/react-hooks": "2.0.3",
    "ava": "^2.4.0",
    "babel-eslint": "^10.0.2",
    "babel-preset-expo": "^7.0.0",
    "eslint": "6.5.1",
    "eslint-config-airbnb": "18.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.1.2",
    "husky": "^3.0.3",
    "jest-expo": "^35.0.0",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "bootstrap": "rm -rf node_modules && rm -rf frontend/node_modules && yarn",
    "eslint": "eslint -c ./eslintrc.js --ignore-path .gitignore frontend --fix",
    "prettier": "prettier -c .prettierrc --write",
    "jest-verbose": "jest --watchAll --verbose",
    "jest": "jest --silent",
    "ava": "ava"
  } ,
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "frontend/node_modules/(?!(jest-)?react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|sentry-expo|native-base)",
      "node_modules/(?!(jest-)?react-native|react-clone-referenced-element|@react-native-community|expo(nent)?|@expo(nent)?/.*|react-navigation|@react-navigation/.*|@unimodules/.*|sentry-expo|native-base)"
    ]
  }
}
